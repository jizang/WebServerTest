@model WebServer.Models.NorthwindDB.Products

@{
    ViewData["Title"] = "新增產品";
}

<div class="container mt-4">
    <h2>新增產品</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">產品名稱</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryID" class="form-label">產品類別</label>
                    <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.CategoryID">
                        <option value="">-- 請選擇類別 --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="SupplierID" class="form-label">供應商</label>
                    <select asp-for="SupplierID" class="form-select" asp-items="ViewBag.SupplierID">
                        <option value="">-- 請選擇供應商 --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="UnitPrice" class="form-label">單價</label>
                    <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" asp-format="{0:F2}" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UnitsInStock" class="form-label">庫存數量</label>
                    <input asp-for="UnitsInStock" class="form-control" type="number" />
                    <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Discontinued" /> @Html.DisplayNameFor(model => model.Discontinued)
                    </label>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">儲存</button>
                    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
